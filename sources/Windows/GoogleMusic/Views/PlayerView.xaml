<views:ViewBase
    x:Class="OutcoldSolutions.GoogleMusic.Views.PlayerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:OutcoldSolutions.GoogleMusic.Views"
    mc:Ignorable="d"
    d:DesignHeight="768"
    d:DesignWidth="320">

    <StackPanel Width="320" DataContext="{Binding Path=BindingModel, Mode=OneTime}">
        
        <MediaElement 
                x:Name="MediaElement"
                IsLooping="False"
                AutoPlay="True"
                AudioCategory="BackgroundCapableMedia"
                MediaEnded="MediaEnded" />

        <Image Height="256" Width="256" Margin="32, 32, 32, 0"
               Source="{Binding Path=CurrentSong.AlbumArt, Mode=OneWay}" />

        <StackPanel Margin="20" >
            <TextBlock Style="{StaticResource GroupHeaderTextStyle}" Text="{Binding Path=CurrentSong.Artist, Mode=OneWay}" />
            <TextBlock Style="{StaticResource SubtitleTextStyle}" Text="{Binding Path=CurrentSong.Title, Mode=OneWay}" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            
            <Button Style="{StaticResource SkipBackAppBarButtonStyle}" 
                    AutomationProperties.Name="" 
                    Command="{Binding Path=SkipBackCommand, Mode=OneTime}"
                    Margin="10, 0, 0, 0"
                    VerticalAlignment="Top"
                    Width="70" Height="65"/>
            <Button Style="{StaticResource PlayAppBarButtonStyle}"  
                    Visibility="{Binding Path=IsPlaying, Mode=OneWay, Converter={StaticResource BooleanToInvisibilityConverter}}" 
                    AutomationProperties.Name=""  
                    Command="{Binding Path=PlayCommand, Mode=OneTime}"
                    VerticalAlignment="Top"
                    Width="70" Height="65"/>
            <Button Style="{StaticResource PauseAppBarButtonStyle}" 
                    Visibility="{Binding Path=IsPlaying, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" 
                    AutomationProperties.Name="" 
                    Command="{Binding Path=PauseCommand, Mode=OneTime}"
                    VerticalAlignment="Top"
                    Width="70" Height="65"/>
            <Button Style="{StaticResource SkipAheadAppBarButtonStyle}"  
                    AutomationProperties.Name="" 
                    Command="{Binding Path=SkipAheadCommand, Mode=OneTime}"
                    VerticalAlignment="Top"
                    Width="70" Height="65"/>
            
        </StackPanel>

        <Slider Margin="20, 10" x:Name="ProgressBar" Value="{Binding Path=Position.TotalSeconds, Mode=OneWay, ElementName=MediaElement}"/>
        
        <CheckBox IsChecked="False" Checked="ToggleButton_OnChecked" >Request Active</CheckBox>
        
    </StackPanel>
</views:ViewBase>
