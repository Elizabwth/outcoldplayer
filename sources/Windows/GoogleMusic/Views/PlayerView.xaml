<views:ViewBase
    x:Class="OutcoldSolutions.GoogleMusic.Views.PlayerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:OutcoldSolutions.GoogleMusic.Views"
    mc:Ignorable="d"
    d:DesignHeight="768"
    d:DesignWidth="320">

    <Grid Width="320" DataContext="{Binding Path=BindingModel, Mode=OneTime}" >
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <MediaElement 
                x:Name="MediaElement"
                IsLooping="False"
                AutoPlay="True"
                AudioCategory="BackgroundCapableMedia"
                MediaEnded="MediaEnded" />

        <Image Grid.Row="0" Height="256" Width="256" Margin="32"
               Source="{Binding Path=CurrentSong.AlbumArt, Mode=OneWay}" />

        <ListView Grid.Row="1"
                  x:Name="SongsList"
                  ItemsSource="{Binding Path=Songs, Mode=OneTime}" 
                  SelectionMode="Single"
                  SelectionChanged="SongsListSelectionChanged">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid HorizontalAlignment="Stretch" Margin="15, 5, 15, 5" MinHeight="65">
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Style="{StaticResource TitleTextStyle}" Text="{Binding Path=Index, Mode=OneWay}" Margin="0, 0, 7, 0"/>
                        
                        <StackPanel Orientation="Vertical" Grid.Column="1" >
                            <TextBlock Style="{StaticResource TitleTextStyle}" Text="{Binding Path=Title, Mode=OneWay}"/>
                            <TextBlock Style="{StaticResource SubtitleTextStyle}" Text="{Binding Path=Artist, Mode=OneWay}"/>
                        </StackPanel>

                        <Button Style="{StaticResource PauseAppBarButtonStyle}" 
                                VerticalAlignment="Top"
                                Grid.Column="2"
                                AutomationProperties.Name=""
                                Width="65"
                                Height="65"
                                Visibility="{Binding Path=IsPlaying, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" 
                                Command="{Binding Path=DataContext.PauseCommand, Mode=OneTime, ElementName=SongsList}"/>

                        <StackPanel Grid.Column="2"
                                    VerticalAlignment="Top"
                                    Visibility="{Binding Path=IsSelected, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"  >
                            <Button Style="{StaticResource PlayAppBarButtonStyle}" 
                                    VerticalAlignment="Top"
                                    AutomationProperties.Name=""
                                    Width="65"
                                    Height="65"
                                    Visibility="{Binding Path=IsPlaying, Mode=OneWay, Converter={StaticResource BooleanToInvisibilityConverter}}"
                                    Click="ItemPlayClick"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
            
        </ListView>

        <StackPanel Grid.Row="2"
                    HorizontalAlignment="Stretch"
                    Margin="20, 10" >
            <Slider x:Name="ProgressBar" 
                    ValueChanged="ProgressBarValueChanged"
                    ManipulationStarted="ProgressBarManipulationStarted"
                    ManipulationCompleted="ProgressBarManipulationCompleted"
                    Margin="0, 10, 0, 0"
                    ThumbToolTipValueConverter="{StaticResource DoubleToTimeConverter}"
                    Value="{Binding Path=Position.TotalSeconds, Mode=OneWay, ElementName=MediaElement}"
                    Padding="0"/>

            <Grid Margin="0, 10, 0, 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Visibility="{Binding Path=DownloadProgress, ElementName=MediaElement, Mode=OneWay, Converter={StaticResource ValueToInvisibilityConverter}, ConverterParameter=1.0}">
                    <TextBlock HorizontalAlignment="Left" Style="{StaticResource SmallTextStyle}">Buffering (</TextBlock>
                    <TextBlock Style="{StaticResource SmallTextStyle}" 
                            HorizontalAlignment="Stretch"
                            TextAlignment="Right"
                            Text="{Binding Path=DownloadProgress, ElementName=MediaElement, Converter={StaticResource StringFormatConverter}, ConverterParameter=P0}" />
                    <TextBlock HorizontalAlignment="Left" Style="{StaticResource SmallTextStyle}">)</TextBlock>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="1">
                    <TextBlock Style="{StaticResource SmallTextStyle}" x:Name="CurrentTime" />
                    <TextBlock Style="{StaticResource SmallTextStyle}" Text="/"  Margin="5, 0"/>
                    <TextBlock Style="{StaticResource SmallTextStyle}" Text="{Binding Path=CurrentSong.Time, Mode=OneWay}" />
                </StackPanel>
            </Grid>

        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="3">
            
            <Button Style="{StaticResource SkipBackAppBarButtonStyle}" 
                    Command="{Binding Path=SkipBackCommand, Mode=OneTime}"
                    Margin="10, 0, 0, 0"
                    VerticalAlignment="Top"/>
            <Button Style="{StaticResource PlayAppBarButtonStyle}"  
                    Visibility="{Binding Path=IsPlaying, Mode=OneWay, Converter={StaticResource BooleanToInvisibilityConverter}}" 
                    Command="{Binding Path=PlayCommand, Mode=OneTime}"
                    VerticalAlignment="Top"/>
            <Button Style="{StaticResource PauseAppBarButtonStyle}" 
                    Visibility="{Binding Path=IsPlaying, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" 
                    Command="{Binding Path=PauseCommand, Mode=OneTime}"
                    VerticalAlignment="Top"/>
            <Button Style="{StaticResource SkipAheadAppBarButtonStyle}"  
                    Command="{Binding Path=SkipAheadCommand, Mode=OneTime}"
                    VerticalAlignment="Top"/>
            
        </StackPanel>
        
    </Grid>
</views:ViewBase>
